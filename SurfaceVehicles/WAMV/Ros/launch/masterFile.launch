<launch>
   	<node
	  pkg="nmea_navsat_driver"
	  type="nmea_serial_driver"
	  name="gps"
	>
	<param name="port" value="/dev/ttyUSB0"/>
	<param name="baud" value="9600"/>
	<param name="frame_id" value="map"/>
	<remap from="fix" to="wamvGps"/>

	</node>

	
<!--
	<node
	  pkg="urg_node"
	  type="urg_node"
	  name="lidar">
	<param name="ip_address" value="192.168.0.10" />

	</node>
-->
	<node
	  pkg="um7"
	  type="um7_driver"
	  name="imu" >
	<param name="port" value="/dev/ttyUSB1"/>
	<remap from="imu/data" to="wamvImu/data"/>
	<remap from="imu/mag" to="wamvImu/mag"/>
	<remap from="imu/rpy" to="wamvImu/rpy"/>
	<remap from="imu/temperature" to="wamvImu/temperature"/>
	</node>
	
	<node
	  pkg="rosserial_python"
	  type="serial_node.py"
	  name="serial"
	 >
	<param name="port" value="/dev/wamvMainMega" />
	<param name="baud" value="57600" />
	</node>
<!--
	<node
	  pkg="rosbag"
	  type="record"
	  name="record_data"
	  args="-o ~/bagfiles/test -a"
	/>
-->
	<node
		pkg="tf2_ros" type="static_transform_publisher" name="baselink_to_gps_broadcaster"
		args="0 0 0 0 0 0 map imu_link"
	/>

</launch> 
